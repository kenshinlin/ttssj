.inner-page{
	padding-bottom: 120rpx;
	height: 100%;
	box-sizing: border-box;
}

.footer{
	width: 100%;
	position: fixed;
	bottom: 0;
	z-index: 999;
	background-color: #FFF;
}


.modal-mask{
	position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6);
}

.modal{
	position: fixed;
    z-index: 5000;
    width: 80%;
    max-width: 300px;
    top: 40%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #FFFFFF;
    text-align: center;
    border-radius: 3px;
    overflow: hidden;
}

.modal-header{
    padding: 1.3em 1.6em 0.5em;
    font-weight: 400;
    /*font-size: 18px;*/
}
.modal-body{
	padding: 0.8em 1.6em 0.8em;
    min-height: 40px;
    font-size: 15px;
    line-height: 1.3;
    word-wrap: break-word;
    word-break: break-all;
    color: #999999;
}
.modal-body input{
	border:1rpx solid #ddd;
	padding:8rpx 12rpx;
	border-radius:4rpx;
	width:60%;
	margin:0 auto;
}

.modal-footer{
    position: relative;
    line-height: 48px;
    border-top: 1rpx solid #D5D5D6;
    /*font-size: 18px;*/
}

.modal-footer .btn:first-child{
	border-right: 1rpx solid #D5D5D6;
}

.modal-footer .btn{
	display: block;
    flex: 1;
    color:#353535;
    text-decoration: none;
    position: relative;
}

.modal-footer .btn.ok{
	 color:#3CC51F;
}
